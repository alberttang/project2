<!-- particles.js container -->
<div id="particles-js"></div>
<!-- stats - count particles -->
<div class="count-particles">
	<span class="js-count-particles">--</span> particles
</div>
<!-- particles.js lib - https://github.com/VincentGarreau/particles.js -->
<script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<!-- stats.js lib -->
<script src="http://threejs.org/examples/js/libs/stats.min.js"></script>

	<div class="header">
		<div class="block-alpha">
			<a href="/">
				<div class="logo">PollIt - My Polls</div>
			</a>
		</div>
		<div class="block-beta">
			<a href="/create-poll.html">
				<button type="submit" class="btn">Create Poll</button>
			</a>
		</div>
		<div class="block-omega">
			<div class="log-form">
				<form >
				{{!-- action="/api/auth/login" method="post" --}}
					<input type="text" id="username" name="userName" title="username" placeholder="username" />
					<input type="password" id="password" name="password" title="username" placeholder="password" />
					<button type="button" id="loginBtn" class="btn login">Login</button>
					<a class="forgot" href="#">Forgot Username?</a>
				</form>
				<button id="signup-button" class="signup" onclick="document.getElementById('signup').style.display='block'" style="width:auto;">Sign Up</button>
			</div>
			<a href="#">
				<button id="my-polls_top" class="btn my-polls">My Polls</button>
			</a>
		</div>
	</div>
	
</div>

	<div class="container">
        <h3 class="category-title">{{this.data.User.userName}} Poll #{{this.data.id}}</h3>
        <div class="poll">
			<div class="poll-question" pid="{{this.data.id}}">{{this.data.question}}</div>
			<div class="poll-question">{{this.data.category}}</div>

			<div class="poll-answer">
				<form>
					<input class="radio-button" type="radio" pollId="{{this.data.Answers.[0].PollId}}" optid="{{this.data.Answers.[0].id}}" name="option" value="{{this.data.Answers.[0].option}}">
						<span>{{this.data.Answers.[0].option}}</span>
						<div class="progress" style="display: none">
								<div class="determinate result1" ></div>
							</div><br>
					<input class="radio-button" type="radio" pollId="{{this.data.Answers.[1].PollId}}" optid="{{this.data.Answers.[1].id}}" name="option" value="{{this.data.Answers.[1].option}}">
						<span>{{this.data.Answers.[1].option}}</span>
						<div class="progress" style="display: none">
								<div class="determinate result2" ></div>
							</div><br>
					  {{#if this.data.Answers.[2].option}}
					<input class="radio-button" type="radio" pollId="{{this.data.Answers.[2].PollId}}" optid="{{this.data.Answers.[2].id}}" name="option" value="{{this.data.Answers.[2].option}}">
						<span>{{this.data.Answers.[2].option}}</span>
						<div class="progress" style="display: none">
								<div class="determinate result3" ></div>
							</div><br>
						{{/if}}
						{{#if this.data.Answers.[3].option}}
					<input class="radio-button" type="radio" pollId="{{this.data.Answers.[3].PollId}}" optid="{{this.data.Answers.[3].id}}" name="option" value="{{this.data.Answers.[3].option}}">
						<span>{{this.data.Answers.[3].option}}</span><div class="progress" style="display: none">
								<div class="determinate result4" ></div>
							</div><br>
						{{/if}}
				</form> 
			</div>
			<button type="submit" class="btn vote-button">Vote</button>
			<div class="total-votes">
				<i class="small material-icons">insert_chart</i>
				<div class="vote-counter"></div>
			</div>
		</div>
		{{!-- CHART ENDS --}}
	</div>
</div>